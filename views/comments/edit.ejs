<% include ../partials/header %>
<div class="container">

  <header class="jumbotron">
    <div class="container">
      <h1 style="text-align: center">Edit Comment</h1>
    </div>
  </header>

  <div style="width: 30%; margin: 25px auto;">
              <form action="/campgrounds/<%=campground_id%>/comments/<%= comment._id %>?_method=PUT" method="POST">
                  <div class="form-group">
                      <textarea class="form-control" name="comment[text]" rows="5"><%= comment.text %></textarea>
                  </div>
                  <div class="form-group">
                      <button class="btn btn-md btn-primary btn-block">Submit!</button>
                  </div>
              </form>
              <a href="/campgrounds">Go Back</a>
   </div>

</div>
