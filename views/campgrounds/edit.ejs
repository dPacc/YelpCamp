<% include ../partials/header %>

<div class="container">

  <header class="jumbotron">
    <div class="container">
      <h1 style="text-align: center">Edit <%= editCamp.name %></h1>
    </div>
  </header>


  <div style="width: 30%; margin: 25px auto;">
              <form action="/campgrounds/<%= editCamp._id %>?_method=PUT" method="POST">
                  <div class="form-group">
                      <input class="form-control" type="text" name="campground[name]" value="<%= editCamp.name %>">
                  </div>
                  <div class="form-group">
                      <textarea class="form-control" name="campground[image]" rows="2"><%= editCamp.image %></textarea>
                  </div>
                  <div class="form-group">
                      <textarea class="form-control" name="campground[description]" rows="5"><%= editCamp.description %></textarea>
                  </div>
                  <div class="form-group">
                      <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                  </div>
              </form>
   </div>



  <a href="/campgrounds">Go Back</a>

<% include ../partials/footer %>
</div>
