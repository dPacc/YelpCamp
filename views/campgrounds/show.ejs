<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">YelpCamp</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive" src="<%= showCamp.image %>">
                <div class="caption-full">
                    <h4 class="pull-right">$12.00/night</h4>
                    <h4><a href="#"><%=showCamp.name%></a></h4>
                    <p><%=showCamp.description%></p>
                    <p><em>Submitted by <%=showCamp.author.username%></em></p>
                    <div class="text-left">
                      <% if(currentUser && showCamp.author.id.equals(currentUser._id)) { %>
                        <a class="btn btn-pill btn-warning" href = "/campgrounds/<%=showCamp._id%>/edit">Edit</a>
                        <form id="delete-form" action="/campgrounds/<%= showCamp._id %>?_method=DELETE" method="POST">
                            <button class="btn btn-pill btn-danger">Delete</button>
                        </form>
                      <% } %>
                    </div>
                </div>
            </div>
            <div class="well">
                <div class="text-right">
                    <a class="btn btn-success btn-md" href = "/campgrounds/<%=showCamp._id%>/comments/new">Leave a review</a>
                </div>
                <hr>
                <% showCamp.comments.forEach(function(comment) { %>
                    <div class="row">
                        <div class="col-md-12">
                            <strong><%= comment.author.username %></strong>
                            <span class="pull-right">10 days ago</span>
                        </div>
                    </div>
                  <p><%= comment.text %></p>
                <% }); %>
            </div>
        </div>
    </div>
</div>

<a href="/campgrounds">Go Back!</a>

<% include ../partials/footer %>
