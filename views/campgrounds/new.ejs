<% include ../partials/header %>

<div class="container">

  <header class="jumbotron">
    <div class="container">
      <h1 style="text-align: center">Create a New Campground</h1>
      <p style="text-align: center">Enter the name and url of the campground you would like to add</p>
    </div>
  </header>


  <div style="width: 30%; margin: 25px auto;">
              <form action="/campgrounds" method="POST">
                  <div class="form-group">
                      <input class="form-control" type="text" name="name" placeholder="Enter Name">
                  </div>
                  <div class="form-group">
                      <input class="form-control" type="number" name="price" placeholder="Enter Price" min="0.01" step="0.01">
                  </div>
                  <div class="form-group">
                      <textarea class="form-control" name="image" rows="2" placeholder="Image URL"></textarea>
                  </div>
                  <div class="form-group">
                      <textarea class="form-control" name="description" rows="5" placeholder="Enter description"></textarea>
                  </div>
                  <div class="form-group">
                      <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                  </div>
              </form>
   </div>



  <a href="/campgrounds">Go Back</a>

<% include ../partials/footer %>
</div>
